@model Entities.Entities.Category

@{
    ViewData["Title"] = "Add";
}



<div class="row">
    <div class="col-md-12">

        <form asp-action="Add" asp-controller="Category" method="post" onsubmit="return AjaxAddCategory(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            #
                        </div>
                    </div>

                    <input asp-for="@Model.Name" class="form-control" />

                </div>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-block btn-primary"/>
            </div>
        </form>
    </div>
   
</div>


