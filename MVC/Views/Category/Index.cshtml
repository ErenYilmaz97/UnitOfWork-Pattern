@model List<Category>
@{
    ViewData["Title"] = "Index";
}

    <div class="row mt-5">
        <div class="col-md-2"></div>
        <div class="col-md-8">



            @if (ViewBag.CategoryProcessStatus == "Succeeded" && ViewBag.CategoryResponseMessage != null)
            {

            <div class="alert alert-success mt-4">
                <small>@ViewBag.CategoryResponseMessage</small>
            </div>

            }
            else if (ViewBag.CategoryProcessStatus == "Failed" && ViewBag.CategoryResponseMessage != null)
            {

                <div class="alert alert-danger mt-4">
                    <small>@ViewBag.CategoryResponseMessage</small>
                </div>
            }


            @if (Model.Count == 0)
            {
                <div class="alert alert-danger mt-4">
                    <small>Kategori Bulunamadı.</small>
                </div>
            }
            else
            {   <div id="categoryTable" class="mb-5">
                    
                    @await Component.InvokeAsync("CategoryTable",Model)

                </div>
               
            }


            
        </div>
        <div class="col-md-2"></div>
    </div>

