@model List<Category>
@{
    ViewData["Title"] = "Index";
}

    <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">



            @if (ViewBag.CategoryProcessStatus == "Succeeded" && ViewBag.CategoryResponseMessage != null)
            {

            <div class="alert alert-success mt-4">
                <small>@ViewBag.CategoryResponseMessage</small>
            </div>

            }
            else if (ViewBag.CategoryProcessStatus == "Failed" && ViewBag.CategoryResponseMessage != null)
            {

                <div class="alert alert-danger mt-4">
                    <small>@ViewBag.CategoryResponseMessage</small>
                </div>
            }


            @if (Model.Count == 0)
            {
                <div class="alert alert-danger mt-4">
                    <small>Kategori Bulunamadı.</small>
                </div>
            }


            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th class="text-center">Ürün Sayısı</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Category category in Model)
                    {
                        <tr>
                            <td>@category.CategoryID</td>
                            <td>@category.Name</td>
                            <td class="text-center">@category.Products.Count()</td>
                            <td><a class="btn btn-sm btn-outline-primary" href="/Category/Update/@category.CategoryID">Update</a></td>
                            <td><a class="btn btn-sm btn-outline-danger" href="/Category/Delete/@category.CategoryID">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-3"></div>
    </div>

