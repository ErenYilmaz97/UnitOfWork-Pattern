@model Category
@{
    ViewData["Title"] = "Delete";
}

    <div class="row">
        <div class="col-md-12">

            <h6 class="text-center">"@Model.Name" isimli kategoriyi silmek istiyor musunuz?</h6>
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <td>@Model.CategoryID</td>
                </tr>

                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>

            </table>


            <form asp-controller="Category" asp-action="DeleteCategory" method="post" asp-route-id="@Model.CategoryID"
                  onsubmit="return AjaxDeleteCategory(this);" autocomplete="off">

                <input type="hidden" asp-for="CategoryID" />

                <button type="submit" class="btn btn-block btn-danger" value="Delete">Delete</button>
            </form>
        </div>
    </div>

