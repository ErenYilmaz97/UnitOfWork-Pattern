@model Entities.Dto.GetProductWithCategoryDto
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12">
        
        <h6 class="text-center">"@Model.Name" isimli ürünü silmek istiyor musunuz?</h6>
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <td>@Model.ProductID</td>
            </tr>

            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>

            <tr>
                <th>Price</th>
                <td>@Model.Price</td>
            </tr>

            <tr>
                <th>Stock</th>
                <td>@Model.Stock</td>
            </tr>

            <tr>
                <th>Category</th>
                <td>@Model.CategoryName</td>
            </tr>
        </table>


        <form asp-controller="Product" asp-action="DeleteProduct" method="post" asp-route-id="@Model.ProductID"
              onsubmit="return AjaxDeleteProduct(this);" autocomplete="off">

            <input type="hidden" asp-for="ProductID"/>

            <button type="submit" class="btn btn-block btn-danger" value="Delete">Delete</button>
        </form>
    </div>
</div>

