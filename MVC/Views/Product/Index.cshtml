@model List<Product>

    <div class="row mt-5">
        <div class="col-md-2"></div>
        <div class="col-md-8 text-center">

            @if (ViewBag.ProcessStatus == "Succeeded" && ViewBag.ResponseMessage != null)
            {
                <div class="alert alert-success mt-4">
                    <small>@ViewBag.ResponseMessage</small>
                </div>
            }
            
            else if (ViewBag.ProcessStatus == "Failed" && ViewBag.ResponseMessage != null)
            {
                <div class="alert alert-danger mt-4">
                    <small>@ViewBag.ResponseMessage</small>
                </div>
            }
            


            @if (Model.Count == 0)
            {
                <div class="alert alert-danger mt-4">
                    <small>Ürün Bulunamadı.</small>
                </div>

            }
            else
            {

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Category ID</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Product product in Model)
                        {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>@product.Stock</td>
                            <td>@product.CategoryID</td>
                            <td><a href="/Product/Update/@product.ProductID" class="btn btn-sm btn-outline-primary">Update</a></td>
                            <td><a href="/Product/Delete/@product.ProductID" class="btn btn-sm btn-outline-danger">Delete</a></td>
                        </tr>
                        }

                    </tbody>
                </table>
            }

        </div>
        <div class="col-md-2"></div>
    </div>


