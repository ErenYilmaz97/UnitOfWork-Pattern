
@model List<Product>


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h3 class="text-center"><i class="fas fa-comment-dollar text-success"></i> Products</h3>

    </div>
    <div class="col-md-4">

        <a onclick="showAddProductInModal('@Url.Action("Add","Product",null,Context.Request.Scheme)', 'Ürün Ekle')" class="btn btn-sm btn-success text-white" style="margin-left: 60px; margin-top: 4px;">
            <i class="fas fa-random"></i> New Product
        </a>

    </div>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category ID</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>

    @foreach (Product product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Stock</td>
            <td>@product.CategoryID</td>
            <td><button class="btn btn-sm btn-outline-primary" onclick="showUpdateProductInModal('Product/Update/@product.ProductID','Ürün Güncelle')">Update</button></td>
            <td><button class="btn btn-sm btn-outline-danger" onclick="showDeleteProductInModal('Product/Delete/@product.ProductID','Ürün Sil')">Delete</button></td>

        </tr>
    }

    </tbody>
</table>

